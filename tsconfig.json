{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["vitest/globals"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
